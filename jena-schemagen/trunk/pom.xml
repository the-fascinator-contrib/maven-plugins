<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
 <modelVersion>4.0.0</modelVersion>
 <groupId>au.edu.usq.fascinator.maven-plugins</groupId>
 <artifactId>jena-schemagen</artifactId>
 <version>0.0.1-SNAPSHOT</version>
 <packaging>maven-plugin</packaging>
 <name>Jena Schemagen plugin</name>
 <parent>
  <artifactId>organisation</artifactId>
  <groupId>au.edu.usq.fascinator</groupId>
  <version>0.3.3-SNAPSHOT</version>
 </parent>

 <dependencies>
  <dependency>
   <groupId>org.apache.maven</groupId>
   <artifactId>maven-plugin-api</artifactId>
   <version>2.0</version>
  </dependency>
  <dependency>
   <groupId>org.apache.maven</groupId>
   <artifactId>maven-core</artifactId>
   <version>2.0</version>
  </dependency>
  <dependency>
   <groupId>com.hp.hpl.jena</groupId>
   <artifactId>jena</artifactId>
   <version>2.6.3</version>
   <type>jar</type>
   <scope>compile</scope>
  </dependency>

  <dependency>
   <groupId>org.slf4j</groupId>
   <artifactId>slf4j-api</artifactId>
   <version>1.6.1</version>
   <scope>compile</scope>
  </dependency>
  <dependency>
   <groupId>org.slf4j</groupId>
   <artifactId>slf4j-log4j12</artifactId>
   <version>1.6.1</version>
  </dependency>
  <dependency>
   <groupId>log4j</groupId>
   <artifactId>log4j</artifactId>
   <version>1.2.16</version>
   <scope>compile</scope>
  </dependency>
 </dependencies>

 <build>
  <plugins>
   <plugin>
    <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-compiler-plugin</artifactId>
    <configuration>
     <source>${jdk-version}</source>
     <target>${jdk-version}</target>
    </configuration>
   </plugin>
   <plugin>
    <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-jar-plugin</artifactId>
    <version>2.2</version>
    <configuration>
     <archive>
      <manifest>
       <mainClass>au.edu.usq.fascinator.maven_plugins.jena_schemagen.Schemagen
       </mainClass>
      </manifest>
     </archive>
    </configuration>
   </plugin>
   <plugin>
    <groupId>org.codehaus.mojo</groupId>
    <artifactId>exec-maven-plugin</artifactId>
    <version>1.1.1</version>
    <configuration>
     <mainClass>au.edu.usq.fascinator.maven_plugins.jena_schemagen.Schemagen
     </mainClass>
    </configuration>
   </plugin>
  </plugins>
 </build>
 <reporting>
  <plugins>
   <plugin>
    <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-plugin-plugin</artifactId>
    <version>2.5.1</version>
   </plugin>
  </plugins>
 </reporting>
 <repositories>
  <repository>
   <id>adfi-usq-releases</id>
   <url>http://fascinator.usq.edu.au/nexus/content/groups/public</url>
  </repository>
 </repositories>
</project>